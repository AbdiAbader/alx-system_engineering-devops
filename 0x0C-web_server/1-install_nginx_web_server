#!/usr/bin/env bash                                                                                                                                                   
# installing nginx in my server                                                                                                                                       

sudo apt-get update
sudo apt-get install -y nginx
mkdir /var/www/html/abdi
touch  /var/www/html/abdi/index.html
echo "Hello World!" > /var/www/html/abdi/index.html
printf %s "server {                                                                                                                                                   
     listen      80 default_server;                                                                                                                                   
     listen      [::]:80 default_server;                                                                                                                              
     root        /var/www/html/abdi/index.html                                                                                                                        
     index       index.html;                                                                                                                                          
}                                                                                                                                                                     
" > /etc/nginx/sites-available/default

sudo service nginx restart
